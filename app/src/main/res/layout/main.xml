<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C9F1FD"
    android:id="@+id/still">

    <ImageView
        android:layout_width="314dp"
        android:layout_height="253dp"
        android:id="@+id/imageView2"
        android:src="@drawable/sharkvert"
        android:layout_marginBottom="200dp"
        android:layout_marginLeft="30dp" />

    <Button
        android:id="@+id/angry_btn"

        android:text="Shark Split"
        android:textColor="#030505"
        android:textSize="30sp"
        android:layout_gravity="center"

        android:layout_width="270dp"
        android:layout_height="60dp"
        android:background="@drawable/mybuttonshape" />

    <Button
        android:id="@+id/angry_btn2"

        android:text="draw blood"
        android:textColor="#030505"
        android:textSize="30sp"
        android:layout_gravity="center"

        android:layout_width="270dp"
        android:layout_height="60dp"
        android:background="@drawable/mybuttonshape" />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/bid" />

</LinearLayout>